<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="355.0" prefWidth="508.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cytech.address.view.AccueilController">

    <!-- Titre -->
    <Label alignment="CENTER" layoutX="41.0" layoutY="35.0" style="-fx-font-size: 18px;" stylesheets="@style.css" text="Bienvenue sur notre plateforme de vente de films">
      <font>
         <Font name="Berlin Sans FB" size="20.0" />
      </font></Label>

    <!-- Boutons -->
    <Button fx:id="adminButton" layoutX="6.0" layoutY="83.0" onAction="#showAdminButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Compte Administrateur">
        <cursor>
           <Cursor fx:constant="DEFAULT" />
        </cursor>
    </Button>
    <Button fx:id="clientButton" layoutX="19.0" layoutY="83.0" onAction="#showClientButton" prefHeight="30.0" prefWidth="110.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Compte Client">
        <cursor>
           <Cursor fx:constant="DEFAULT" />
        </cursor>
    </Button>
    <Button fx:id="parcourirFilmsButton" layoutX="186.0" layoutY="224.0" onAction="#parcourirFilmsButtonClicked" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;" text="Parcourir les films">
        <cursor>
           <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
   <ButtonBar layoutX="196.0" layoutY="78.0" prefHeight="40.0" prefWidth="294.0">
     <buttons>
          <Button fx:id="seConnecterButton" onAction="#connexion" prefHeight="30.0" prefWidth="160.0" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 14px;" text="Se connecter">
              <cursor>
                 <Cursor fx:constant="HAND" />
              </cursor>
          </Button>
     </buttons>
   </ButtonBar>
   <Button fx:id="gestionFilmButton" layoutX="195.0" layoutY="178.0" onAction="#gestionFilmButtonClicked" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="ajouter un film">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </Button>
   <Button fx:id="sabonnerButton" layoutX="21.0" layoutY="298.0" onAction="#sabonnerButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="S'abonner">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </Button>
    <Button fx:id="sInscrireButton" layoutX="381.0" layoutY="127.0" onAction="#inscription" style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-size: 14px;" text="S'inscrire">
        <cursor>
           <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
</AnchorPane>
